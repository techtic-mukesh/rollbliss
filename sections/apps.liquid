<div class="{{ section.settings.custom_class }}">
{%- if section.settings.space_around -%}
  <div class="index-section">
{%- endif -%}

{% if section.settings.bg_color %}
<div class="" style="background: {{ section.settings.bg_color }}">
{% endif %}
  
{%- unless section.settings.full_width -%}
  <div class="page-width app-block">
{%- endunless -%}

{%- for block in section.blocks -%}
  {% render block %}
{%- endfor -%}

{%- unless section.settings.full_width -%}
  </div>
{%- endunless -%}

{% if section.settings.bg_color %}
</div>
{% endif %}

{%- if section.settings.space_around -%}
  </div>
{%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom class"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.apps.settings.full_width.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "space_around",
      "label": "t:sections.apps.settings.space_around.label",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.apps.name"
    }
  ]
}
{% endschema %}
